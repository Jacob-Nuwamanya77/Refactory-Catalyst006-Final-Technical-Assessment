meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css")
link(rel="stylesheet", href="../css/stylesheet.css")
title title
main
  //  HEADER IMAGE AND TEXT 
  .container
    .row
      img.headerImage(src="../images/form-header-image.png", alt="Image of MOH Logo")
    div
      h4.headerText Ministry of Health
      h1.headerText.virus COVID-19 (CORONA VIRUS)
      h4.headerText Virus - Test Registration Form
    div
      span#successMsg
  section
    //  REGISTRATION FORM 
    .container
      .row
        .col-md-12.order-md-1
          form(name="regForm", action="/regestrationForm", method="POST", onsubmit="return regFormVal()")
            .row
              .col-md-6.mb-3
                label(for="surName") Surname
                input.form-control(type="text", name="surName", placeholder)
                span#surnameErr.covers.
                  
                  
              .col-md-6.mb-3
                label(for="givenName") Given name
                input.form-control(type="text", name="givenName", placeholder)
                span#givenNameErr.covers.
                  
                  
            .row
              .col-md-6.mb-3
                label(for="dob") Date of Birth
                input.form-control(type="date", name="dob", placeholder)
                span#dobErr.covers.
                  
                  
              .col-md-6.mb-3
                label(for="residence") Place of residence
                input.form-control(type="text", name="residence", placeholder)
                span#residenceErr.covers.
                  
                  
            .row
              .col-md-6.mb-3
                label(for="occupation") Occupation
                input.form-control(type="text", name="occupation", placeholder)
                span#occupationErr.
                  
                  
              .col-md-6.mb-3
                label(for="nationality") Nationality
                input.form-control(type="text", name="nationality", placeholder)
                span#nationalityErr.covers.
                  
                  
            h4.mb-3 Gender
            hr
            .row
              .col-md-6.mb-3
                .custom-control.custom-radio
                  input#male.custom-control-input(name="gender", type="radio", checked, required)
                  label.custom-control-label(for="male  ") Male
                .custom-control.custom-radio.col-md-6.mb-3
                  input#female.custom-control-input(name="gender", type="radio", required)
                  label.custom-control-label(for="female") Female
            .row
              .col-md-12.mb-3
                label(for="category") Category
                span#categoryErr.covers
                select.custom-select.d-block.w-100#category
                  option(value) --Select Category--
                  option United States
            .row
              .col-3.btnAlign
                button.btn.btn-primary.btn-lg.btn-block(type="submit") Register
script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js")
script(src="../js/validation.js")